<%= form_for(current_user.relationships.find_by(followed_id: @user.id),
             html: { method: :delete },
             remote: true) do |f| %>
  <%= f.submit "Unfollow", class: "btn btn-large" %>
<% end %>

<!-- This is using AJAX, so user doesn't have to leav page and be redirected back. Can stay on page
and post destroy or create action -->